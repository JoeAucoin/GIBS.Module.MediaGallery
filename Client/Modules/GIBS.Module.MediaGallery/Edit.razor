@using Oqtane.Modules.Controls
@using GIBS.Module.MediaGallery.Services
@using GIBS.Module.MediaGallery.Models

@namespace GIBS.Module.MediaGallery
@inherits ModuleBase
@inject IMediaGalleryCategoryService MediaGalleryCategoryService
@inject NavigationManager NavigationManager
@inject IStringLocalizer<Edit> Localizer

<form @ref="form" class="@(validated ? " was-validated" : "needs-validation" )" novalidate>
    <div class="container">
        <div class="row mb-1 align-items-center">
            <Label Class="col-sm-3" For="name" HelpText="Enter a name" ResourceKey="Name">Name: </Label>
            <div class="col-sm-9">
                <input id="name" class="form-control" @bind="@_name" required />
            </div>
        </div>
    </div>
    <button type="button" class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
    <NavLink class="btn btn-secondary" href="@NavigateUrl()">@Localizer["Cancel"]</NavLink>
    <br /><br />
    @if (PageState.Action == "Edit")
    {
    <AuditInfo CreatedBy="@_createdby" CreatedOn="@_createdon" ModifiedBy="@_modifiedby" ModifiedOn="@_modifiedon"></AuditInfo>
    }
</form>

@code {
    public override SecurityAccessLevel SecurityAccessLevel => SecurityAccessLevel.Edit;

    public override string Actions => "Add,Edit";

    public override string Title => "Manage MediaGallery";

    public override List<Resource> Resources => new List<Resource>()
    {
        new Stylesheet(ModulePath() + "Module.css")
    };

    private ElementReference form;
    private bool validated = false;

    private int _id;
    private string _name;
    private string _createdby;
    private DateTime _createdon;
    private string _modifiedby;
    private DateTime _modifiedon;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (PageState.Action == "Edit")
            {
                _id = Int32.Parse(PageState.QueryString["id"]);
                MediaGalleryCategory MediaGallery = await MediaGalleryCategoryService.GetMediaGalleryCategoryAsync(_id, ModuleState.ModuleId);
                if (MediaGallery != null)
                {
                    _name = MediaGallery.CategoryName;
                    _createdby = MediaGallery.CreatedBy;
                    _createdon = MediaGallery.CreatedOn;
                    _modifiedby = MediaGallery.ModifiedBy;
                    _modifiedon = MediaGallery.ModifiedOn;
                }
            }
        }
        catch (Exception ex)
        {
            await logger.LogError(ex, "Error Loading MediaGallery {MediaGalleryId} {Error}", _id, ex.Message);
            AddModuleMessage(Localizer["Message.LoadError"], MessageType.Error);
        }
    }

    private async Task Save()
    {
        try
        {
            validated = true;
            var interop = new Oqtane.UI.Interop(JSRuntime);
            if (await interop.FormValid(form))
            {
                if (PageState.Action == "Add")
                {
                    MediaGalleryCategory MediaGallery = new MediaGalleryCategory();
                    MediaGallery.ModuleId = ModuleState.ModuleId;
                    MediaGallery.CategoryName = _name;
                    MediaGallery = await MediaGalleryCategoryService.AddMediaGalleryCategoryAsync(MediaGallery);
                    await logger.LogInformation("MediaGallery Added {MediaGallery}", MediaGallery);
                }
                else
                {
                    MediaGalleryCategory MediaGallery = await MediaGalleryCategoryService.GetMediaGalleryCategoryAsync(_id, ModuleState.ModuleId);
                    MediaGallery.CategoryName = _name;
                    await MediaGalleryCategoryService.UpdateMediaGalleryCategoryAsync(MediaGallery);
                    await logger.LogInformation("MediaGallery Updated {MediaGallery}", MediaGallery);
                }
                NavigationManager.NavigateTo(NavigateUrl());
            }
            else
            {
                AddModuleMessage(Localizer["Message.SaveValidation"], MessageType.Warning);
            }
        }
        catch (Exception ex)
        {
            await logger.LogError(ex, "Error Saving MediaGallery {Error}", ex.Message);
            AddModuleMessage(Localizer["Message.SaveError"], MessageType.Error);
        }
    }
}
